<h2>Check In</h2>
<% form_for(@workout, :url => { :action => 'save', :method => "post" } ) do |f| %>
<%= f.error_messages %>
<div>
	<%= image_tag(gravatar_url_for self.current_user.email)%>
</div>
<div>
	<%= self.current_user.user_name %> (<%= self.current_user.email %>)
</div>
	<input type="hidden" id="workout_user_profile_id" name="workout[user_profile_id]" value="<%=self.current_user.id %>" />

<div>&nbsp;</div>
<div><label>When?</label></div>
<div><%= f.text_field :workout_date %></div>
<div>
	<label>When?</label>
</div>
<div id="workout_type">
	<input type="radio" id="workout_workout_type_id_1" name="workout[workout_type_id]" checked="checked" value="1" />
	<label for="workout_workout_type_id_1">Morning</label>
	<input type="radio" id="workout_workout_type_id_2" name="workout[workout_type_id]" value="2" />
	<label for="workout_workout_type_id_2">Noon</label>
	<input type="radio" id="workout_workout_type_id_3" name="workout[workout_type_id]" value="3" />
	<label for="workout_workout_type_id_3">Afternoon</label>
	<input type="radio" id="workout_workout_type_id_4" name="workout[workout_type_id]" value="4" />
	<label for="workout_workout_type_id_4">Evening</label>
</div>
<div>
	<label>Or, what?</label>
</div>
<div id="workout_type_2">
	<input type="radio" id="workout_workout_type_id_5" name="workout[workout_type_id]" value="5" />
	<label for="workout_workout_type_id_5">Intervals</label>
	<input type="radio" id="workout_workout_type_id_6" name="workout[workout_type_id]" value="6" />
	<label for="workout_workout_type_id_6">Speed</label>
	<input type="radio" id="workout_workout_type_id_7" name="workout[workout_type_id]" value="7" />
	<label for="workout_workout_type_id_7">Hills</label>
	<input type="radio" id="workout_workout_type_id_8" name="workout[workout_type_id]" value="8" />
	<label for="workout_workout_type_id_8">Distance</label>
</div>
<div><label>How Long?</label></div>
<div id="length">
	<span id="cw-length-picker">
		<a href="#" class="cw-length-ctrl" id="cw-length-decr">-</a>
		<a href="#" class="cw-length-ctrl" id="cw-length-incr">+</a>
	</span>
	<input type="radio" id="workout_workout_length" name="workout[workout_length]" checked="checked" value="30" />
	<label for="workout_workout_length" id="cw-length-label">30</label>
	<span id="cw-length-msg"></span>
</div>
<div>
	&nbsp;
</div>
<div>
	<%= f.submit "Checkin" %>
</div>
<% end %>
<script type="text/javascript">
	$(function() {
		$('#workout_type').buttonset();
		$('#workout_type_2').buttonset();
		$('#workout_workout_length').button();
		$('#cw-length-picker').buttonset();
		$('#workout_workout_date').datepicker();
		
		
		$('.cw-length-ctrl').click(
				function(evt){
					evt.preventDefault();
					var operation = this.id.indexOf('incr') != -1 ? '+' : '-';
					setWorkoutLength(operation);
					
				}
			);
		
	});
</script>